@{
    Layout = "~/Views/Shared/_LayoutLogOn.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    <div class="loginPic">
        <span>Podaj adres mailowy:</span>
        @if(ViewBag.Message != null) 
        {
            <div class="nNote nFailure"> @Convert.ToString(ViewBag.Message) </div>
        }
    </div>
    <input type="text" name="Mailadr" placeholder="Adres mailowy" class="loginEmail" />   
    <div class="logControl">
        <input type="submit" name="submit" value="Wyślij" class="buttonM bBlue" />
        <div class="clear"></div>
    </div>
}

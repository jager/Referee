@model Referee.Models.RefereeEntity

@using (Html.BeginForm()) {
  
<fieldset>
    <div class="widget fluid">
        <div class="whead"><h6>Czy na pewno chcesz usunąć Sędziego?</h6><div class="clear"></div></div>
        <div class="formRow">
            <div class="grid12">
                <strong>
                    @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
                </strong>
                
            </div>
            <div class="clear"></div>
        </div>
        <div class="formRow">
            <div class="grid3"></div>
            <div class="grid9">
                <input class="buttonS bGreen" id="deleteReferee" type="submit" value="Usuń" /> 
                @Html.ActionLink("Anuluj", "Index", "Referee", new { }, new { @class = "buttonS bRed" })               
            </div>
            <div class="clear"></div>
        </div>
    </div>
</fieldset>
}
